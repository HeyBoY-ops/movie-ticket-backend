// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  ORGANIZATION
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String    @unique
  password  String
  role      Role      @default(USER)
  isVerified Boolean  @default(false)
  organizationDetails Json?
  createdAt DateTime  @default(now())

  bookings  Booking[]
}

model Movie {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String?
  genre        String[]
  language     String?
  duration     Int?
  rating       Float?
  poster_url   String?
  trailer_url  String?
  release_date DateTime?
  director     String?
  cast         Json?
  isFlagged    Boolean  @default(false)
  ownerId      String?  @db.ObjectId
  category     String   @default("MOVIE")
  createdAt    DateTime @default(now())

  shows        Show[]
}

model Theater {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  city          String
  address       String
  total_screens Int
  ownerId       String?   @db.ObjectId

  shows         Show[]
}

model Show {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  movie_id      String    @db.ObjectId
  theater_id    String    @db.ObjectId
  screen_number Int
  show_date     DateTime
  show_time     String
  total_seats   Int
  price         Float
  booked_seats  Json      @default("[]")

  movie         Movie     @relation(fields: [movie_id], references: [id])
  theater       Theater   @relation(fields: [theater_id], references: [id])
  bookings      Booking[]
}


model Booking {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  user_id        String    @db.ObjectId
  show_id        String    @db.ObjectId
  seats          Json      @default("[]")
  total_amount   Float
  payment_method String
  booking_status String    @default("confirmed")
  createdAt      DateTime  @default(now())

  user           User      @relation(fields: [user_id], references: [id])
  show           Show      @relation(fields: [show_id], references: [id])
}

// TTL Index must be manually created on createdAt for automatic expiration (e.g. 10 mins)
model SeatLock {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  showId     String
  seatNumber String
  userId     String
  createdAt  DateTime @default(now())

  @@unique([showId, seatNumber])
}
