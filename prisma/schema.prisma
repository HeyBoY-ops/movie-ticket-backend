// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  SUPER_ADMIN
  ADMIN
  ORGANIZATION
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id                 String             @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  email              String             @unique
  password           String
  role               Role               @default(USER)
  verificationStatus VerificationStatus @default(PENDING)
  organizationDetails Json?
  createdAt          DateTime           @default(now())

  bookings           Booking[]
  movies             Movie[]            @relation("OrgMovies")
  theaters           Theater[]          @relation("OrgTheaters")
}

model Movie {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String?
  genre        String[]
  language     String?
  duration     Int?
  rating       Float?
  posterUrl   String?
  trailerUrl  String?
  releaseDate DateTime?
  director     String?
  cast         Json?
  isFlagged    Boolean  @default(false)
  ownerId      String?   @db.ObjectId
  owner        User?     @relation("OrgMovies", fields: [ownerId], references: [id])
  category     String   @default("MOVIE")
  createdAt    DateTime @default(now())

  shows        Show[]
}

model Theater {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  city          String
  address       String
  totalScreens Int
  ownerId       String?   @db.ObjectId
  owner         User?     @relation("OrgTheaters", fields: [ownerId], references: [id])

  shows         Show[]
}

model Show {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  movieId      String?    @db.ObjectId
  theaterId    String?    @db.ObjectId
  screenNumber Int
  showDate     DateTime
  showTime     String
  totalSeats   Int
  price         Float
  bookedSeats  Json      @default("[]")

  movie         Movie?     @relation(fields: [movieId], references: [id])
  theater       Theater?   @relation(fields: [theaterId], references: [id])
  bookings      Booking[]
}


model Booking {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  userId        String?    @db.ObjectId
  showId        String?    @db.ObjectId
  seats          Json      @default("[]")
  totalAmount   Float?
  paymentMethod String?
  bookingStatus String?    @default("confirmed")
  createdAt      DateTime  @default(now())

  user           User?      @relation(fields: [userId], references: [id])
  show           Show?      @relation(fields: [showId], references: [id])
}

// TTL Index must be manually created on createdAt for automatic expiration (e.g. 10 mins)
model SeatLock {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  showId     String
  seatNumber String
  userId     String
  createdAt  DateTime @default(now())

  @@unique([showId, seatNumber])
}
